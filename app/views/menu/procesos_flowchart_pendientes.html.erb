<%= render 'procesos/nav' %>
<main role="main" class="container">
  <div class="my-3 p-3 bg-white rounded box-shadow">
    <br>
    <h3><i class="far fa-clock"></i> Procesos Pendientes</h3>
    <br>
    <div class="table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th>Nombre</th>
          <th>Status</th>
          <th>Contribuidores</th>
          <th>Versión</th>
          <th>Creado Por</th>
          <th>Fecha Creado</th>
          <th>Acción</th>
        </tr>
        </thead>

        <tbody>
        <% @flowcharts.each do |flowchart| %>
          <td><%= flowchart.proceso.nombre %></td>
          <td>
            <div class="btn-group" role="group">
              <button id="btnGroupDrop1" type="button" class="btn
              <% if flowchart.proceso.status == 'Solicitud de Aprobacion' %>
                btn-outline-warning
              <% elsif flowchart.proceso.status == 'Rechazado' %>
                btn-outline-danger
              <% else %>
                btn-outline-success
              <% end %>
                dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= flowchart.status %>
              </button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <%= link_to 'accepted', accept_flowchart_path( flowchart), class: "dropdown-item" %>
                <%= link_to 'rejected', reject_flowchart_path(flowchart), class: "dropdown-item" %>
              </div>
            </div>
          </td>
          <td><%= flowchart.proceso.contribuidores %></td>
          <td><%= flowchart.proceso.version %></td>
          <td><%= flowchart.proceso.user.email %></td>
          <td><%= flowchart.proceso.created_at %></td>
          <td><%= link_to '', flowchart.proceso, class: "btn btn-outline-primary fas fa-eye fa-2x" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>